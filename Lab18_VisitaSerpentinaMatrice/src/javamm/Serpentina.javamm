int[] visitaSerpentina(int[][] M) {
	int m = M.length;
	int n = M[0].length;

	int[] arrayVisitaSerpentina = new int[n];
	int riga;
	for (int i = 0; i < n; i++) {
		if (i < m) {
			arrayVisitaSerpentina[i] = M[i][i];
		} else {
			riga = Math.abs(m-1 + (m-1 - i))%m;
			arrayVisitaSerpentina[i] = M[riga][i];
		}
	}

	return arrayVisitaSerpentina;
}